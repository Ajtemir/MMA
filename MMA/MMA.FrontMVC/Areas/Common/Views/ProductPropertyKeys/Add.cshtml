@using MMA.Domain.Common
@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = (List<Category>)ViewData["categories"];
}

<h2>ProductPropertyKeys</h2>

<h2>Add</h2>
<form method="POST" action="@Url.Action("Add", "ProductPropertyKeys", new { Area = "Common" })">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Product property key name</label>
      <input required type="text" class="form-control" id="inputEmail4" placeholder="ProductPropertyKeyName" name="ProductPropertyKeyName">
    </div>
    <div class="form-group col-md-6">
      <label for="inputState">Category Name</label>
      <select id="inputState" class="form-control" name="CategoryId">
      @foreach (var category in categories)
      {
        <option value="@category.CategoryId">@category.CategoryName</option>
      }
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
